<div class="container-fluid">
	<div class="span12">
	<div class='alert alert-info'>Tell us who you are and where you're sitting.</div>

		<h3>@<%= venue %></h3>

		<form action='/orders/drinks' method='post' class="form-horizontal">
			
			

			<p>
			<input class="span12" type="text" name='firstname' placeholder="Firstname" autofocus>
			</p>

			<p>
  			<input class="span12" type="text" name='lastname' placeholder="Lastname">
  			</p>

  			<p>
  			<div class="input-prepend">
  				<span class="add-on">Table #</span>
  				<input class="span2" id="prependedInput" type="text" name='table'>
			</div>
			</p>

  			<p><input class="btn btn-large btn-info" type='submit' value='Check in'></p>
		</form>
	</div>
</div>
