<div id='content'>

  <div class="menu" style="background-color: #eeeeee; color: #555555;">
    <h2 style="padding-left:10px;"><a href="#add-drink-modal" data-toggle="modal">Add Drink</a></h2>

     <div id="add-drink-modal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="ModalLabel" aria-hidden="true">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
          <h3 id="ModalLabel">Pick Drink Type</h3>
        </div>
        <div class="modal-body">
          <h2><a href="#" class="add-drink" data-dismiss="modal" aria-hidden="true">Beer</a></h2>
          <h2><a href="#" class="add-drink" data-dismiss="modal" aria-hidden="true">Wine</a></h2>
          <h2><a href="#" class="add-drink" data-dismiss="modal" aria-hidden="true">Vodka</a></h2>
          <h2><a href="#" class="add-drink" data-dismiss="modal" aria-hidden="true">Whisky</a></h2>
          <h2><a href="#" class="add-drink" data-dismiss="modal" aria-hidden="true">Tequila</a></h2>
          <h2><a href="#" class="add-drink" data-dismiss="modal" aria-hidden="true">Rum</a></h2>
          <h2><a href="#" class="add-drink" data-dismiss="modal" aria-hidden="true">Gin</a></h2>
        </div>
      </div>
    </div>

  <div class="drinks-container"></div>

    <div class="drink-template" style="padding:10px; display: none;">
      <div class="row-fluid" style="background: #555555; color: #f9f9f9">
        
        <form action='/orders' method='post' class="form-horizontal">
          
          <div style="float:left; padding-top:50px; padding-left:10px;"> 
            <input class="input-mini" type="text" id="quantity" value="1">
          </div>
        
          <div style="float:right; padding:10px">      
            
            <p>
              <select class="input-medium">
                  <% @vodkas.each do |vodka| %>
                    <option><%= vodka.name %></option>
                  <% end %>
              </select>
            </p>
            
            <p>
              <select class="input-medium">
                <option>- select mixer -</option>
                <option>* Neat *</option>
                <option>* Rocks *</option>
                <option>* Shot *</option>
                <option>Cola</option>
                <option>Diet Cola</option>
                <option>Cranberry Juice</option>
                <option>Ginger Ale</option>
                <option>Ginger Beer</option>
                <option>Grapefruit Juice</option>
                <option>Lemon Lime Soda</option>
                <option>Lemonade</option>
                <option>Orange Juice</option>
                <option>Pineapple Juice</option>
                <option>Red Bull</option>
                <option>Sugarfree Red Bull</option>
                <option>Soda</option>
                <option>Sour Mix</option>
                <option>Tonic</option>
                <option>Water</option>
              </select>
            </p>
            
            <p>
              <select class="input-medium">
                <option>- select garnish -</option>
                <option>Cherry</option>
                <option>Lemon</option>
                <option>Lime</option>
                <option>Olive</option>
                <option>Orange</option>
              </select>
            </p>

          </div>
        </div>

        <div class="remove" style="margin-top:-30px; margin-left:-10px; color:red;">
          <h3><a href="#" class="remove-drink"><i class="icon-remove-sign"></i></a></h3>
        </div>

      </div>

  

  <div style="text-align:center;">
    <h3><a href="#add-drink-modal" data-toggle="modal"><i class="icon-plus-sign icon-large"></i></a></h3>
  </div>

  <br>

  <p><input class="btn btn-large btn-info" style="float:right;" type='submit' value='Send Drink Order'></p>
  </form>

</div>

<script>
  $(document).ready(function() {
    $('.add-drink').click(function(e) {
      e.preventDefault();

      $(".drink-template")
        .clone()
        .show()
        .removeClass("drink-template")
        .addClass("drink")
        .appendTo(".drinks-container");
    });
 
    $('.remove-drink').live("click",function() {
      $(this).closest(".drink").remove();
    });
  });


</script>